<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.dao.one-to-one.StudentMapper">
    <!--使用使用嵌套查询实现一对关系映射，一对一(一个学生拥有一个唯一的住址)关联模型-->
    <resultMap id="addressMap" type="address">
        <id property="id" column="id"/>
        <result property="street" column="street"/>
        <result property="city" column="city"/>
        <result property="state" column="state"/>
        <result property="zip" column="zip"/>
        <result property="country" column="country"/>
    </resultMap>
    <!--根据主键查询address表-->
    <select id="findAddressById" parameterType="int" resultMap="addressMap">
        SELECT *
        FROM address
        WHERE id = #{id}
    </select>

    <resultMap id="studentAddressMap" type="Student">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <!--column属性指明address_id的列值将作为参数传递给address表-->
        <association property="address" select="findAddressById" column="address_id"/>
    </resultMap>

    <select id="selectStudentAddress" parameterType="int" resultMap="studentAddressMap">
        SELECT *
        FROM student
        WHERE id = #{id};
    </select>
</mapper>