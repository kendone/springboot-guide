<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.dao.one-to-one.StudentMapper">
    <!--使用嵌套ResultMap和内联对象.属性名定义一对一(一个学生拥有一个唯一的住址)关联模型-->
    <resultMap id="studentAddressMap" type="Student">
        <id property="studId" column="stud_id"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <!--address_id为student表中和address表关联的外键的列名-->
        <result property="address.id" column="address_id"/>
        <result property="address.street" column="street"/>
        <result property="address.city" column="city"/>
        <result property="address.state" column="state"/>
        <result property="address.zip" column="zip"/>
        <result property="address.country" column="country"/>
    </resultMap>
    <!--使用SQL关联查询返回结果集-->
    <select id="selectStudentAddress" parameterType="int" resultMap="studentAddressMap">
        SELECT
            id,
            name,
            email,
            a.id AS addressId,
            street,
            city,
            state,
            zip,
            country
        FROM student s
            LEFT JOIN address a
                ON s.address_id = a.id
        WHERE id = #{studId};
    </select>
</mapper>